# https://marketplace.visualstudio.com/items?itemName=humao.rest-client

@hostname = localhost
@port = 8787
@host = {{hostname}}:{{port}}
@contentType = application/json

@code = shortener
@apiKey = API_TOKEN

### 添加数据

POST http://{{host}}/api/mods
Content-Type: {{contentType}}

{
  "slug": "{{code}}",
  "branch": "main",
  "import_url": "go.dsig.cn/{{code}}",
  "repo_url": "https://github.com/idevsig/{{code}}"
}

### 添加数据 （KEY）

POST http://{{host}}/api/mods
Content-Type: {{contentType}}
X-API-KEY: {{apiKey}}

{
  "slug": "{{code}}",
  "branch": "main",
  "import_url": "go.dsig.cn/{{code}}",
  "repo_url": "https://github.com/idevsig/{{code}}"
}

### 添加数据 （KEY + 随机）

POST http://{{host}}/api/mods
Content-Type: {{contentType}}
X-API-KEY: {{apiKey}}

{
  "slug": "{{code}}{{$randomInt 5 100}}",
  "branch": "main",
  "import_url": "go.dsig.cn/{{code}}{{$randomInt 5 100}}",
  "repo_url": "https://github.com/idevsig/{{code}}{{$randomInt 5 100}}"
}

